<section id="blog-header" class="single-post-nav">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12">
        <div class="section-title text-center">
          <%= render partial: 'breadcrumbs', locals: { breadcrumbs: @page_data.breadcrumbs } %>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="blog-post">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8 col-md-12 col-12">
        <%= render partial: 'single_post', locals: { post: @post } %>
      </div>
      <aside class="col-lg-4 col-md-12 col-12">
        <%= render partial: 'search_widget' %>
        <%= render partial: 'categories_widget', locals: { categories: @categories } %>
      </aside>
    </div>
  </div>
</section>
